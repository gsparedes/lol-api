{
  "root": true,
  "env": {
    "es2022": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "extends": [
    "airbnb-base",
    "plugin:import/recommended"
  ],
  "plugins": [
    "import"
  ],
  "rules": {
    "import/extensions": [
      "error",
      "ignorePackages"
    ],
    "no-use-before-define": [
      "error",
      {
        "functions": false
      }
    ],
    "no-console": "off",
    "no-underscore-dangle": "off",
    "no-plusplus": "off"
  }
}
