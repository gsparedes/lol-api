{
  "name": "lol-app",
  "version": "1.0.0",
  "description": "Backend for League of Legends stats application",
  "main": "index.js",
  "scripts": {
    "build": "npm run copy-static-assets && npm run lint && npm run build:ts",
    "build:types": "tsc --emitDeclarationOnly -p tsconfig.json",
    "build:ts": "babel src/ --out-dir build --extensions \".ts,.tsx\" --source-maps inline --ignore \"**/*.ispec.ts,**/*.spec.ts,**/__tests__\"",
    "type-check": "tsc --noEmit",
    "lint:fix": "tslint --fix 'src/**/*.{ts,tsx}'",
    "lint": "tslint 'src/**/*.{ts,tsx}'",
    "lint:watch": "chokidar src/ -c \"npm run lint\" --verbose --initial -p",
    "copy-static-assets": "node copyStaticAssets.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "stack:up": "cd .localstack && sh ./up",
    "stack:down": "cd .localstack && sh ./down",
    "debug": "npm run watch:debug",
    "serve": "node build/index.js",
    "serve:debug": "nodemon --signal SIGHUP --watch build --delay 1 --inspect=0.0.0.0:9235 build/index.js",
    "prestart": "rimraf build && mkdir build && npm run copy-static-assets && npm run lint && npm run build",
    "start": "env NODE_ENV=development npm run watch",
    "watch": "concurrently -k -i --default-input-target 2 -p \"[{name}]\" -n \"TSLint,Babel,Server\" -c \"yellow.bold,blue.bold,cyan.bold,green.bold,white.bold\" \"npm run lint:watch\" \"npm run watch:ts\" \"npm run watch:node\"",
    "watch:debug": "npm run prestart && concurrently -k -i --default-input-target 2 -p \"[{name}]\" -n \"TSLint,Babel,Server\" -c \"yellow.bold,blue.bold,cyan.bold,green.bold,white.bold\" \"npm run lint:watch\" \"npm run watch:ts\" \"npm run serve:debug\"",
    "watch:node": "nodemon --signal SIGHUP --watch build --delay 1 build/index.js",
    "watch:test": "env NODE_ENV=test jest --forceExit --verbose --detectOpenHandles --passWithNoTests --watchAll",
    "watch:ts": "babel src/ --watch --out-dir build --extensions \".ts,.tsx\" --source-maps inline --ignore \"**/*.ispec.ts,**/*.spec.ts,**/__tests__\" --verbose"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gsparedes/lol-app.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/gsparedes/lol-app/issues"
  },
  "homepage": "https://github.com/gsparedes/lol-app#readme",
  "dependencies": {
    "async": "^3.2.0",
    "bluebird": "^3.7.2",
    "bluebird-global": "^1.0.1",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "dotenv": "^10.0.0",
    "eol": "^0.9.1",
    "errorhandler": "^1.5.1",
    "express": "^4.17.1",
    "express-flash": "^0.0.2",
    "express-session": "^1.17.2",
    "express-validator": "^6.11.1",
    "knex": "^0.21.1",
    "knexnest": "^1.0.0",
    "lodash": "^4.17.21",
    "module-alias": "^2.2.2",
    "moment": "^2.29.1",
    "moment-timezone": "^0.5.33",
    "nesthydrationjs": "^1.0.5",
    "pg": "^8.6.0",
    "request": "^2.88.2",
    "request-promise": "^4.2.6",
    "source-map-support": "^0.5.19",
    "uuid": "^3.4.0",
    "winston": "^3.3.3",
    "winston-transport": "^4.4.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.14.3",
    "@babel/core": "^7.14.3",
    "@babel/plugin-proposal-class-properties": "^7.13.0",
    "@babel/plugin-proposal-decorators": "^7.14.2",
    "@babel/plugin-proposal-object-rest-spread": "^7.14.2",
    "@babel/plugin-transform-runtime": "^7.14.3",
    "@babel/preset-env": "^7.14.2",
    "@babel/preset-typescript": "^7.13.0",
    "@types/async": "^3.2.6",
    "@types/bluebird": "^3.5.35",
    "@types/bluebird-global": "^3.5.12",
    "@types/body-parser": "^1.19.0",
    "@types/compression": "^1.7.0",
    "@types/concurrently": "^6.2.0",
    "@types/dotenv": "^8.2.0",
    "@types/errorhandler": "^1.5.0",
    "@types/express": "^4.17.12",
    "@types/lodash": "^4.14.170",
    "@types/moment-timezone": "^0.5.30",
    "@types/node": "^15.6.1",
    "@types/request": "^2.48.5",
    "@types/request-promise": "^4.1.47",
    "@types/uuid": "^8.3.0",
    "babel-plugin-module-resolver": "^4.1.0",
    "babel-plugin-source-map-support": "^2.1.3",
    "chokidar": "^3.5.1",
    "chokidar-cli": "^2.1.0",
    "concurrently": "^6.2.0",
    "mock-knex": "^0.4.10",
    "nodemon": "^2.0.7",
    "rimraf": "^3.0.2",
    "shelljs": "^0.8.4",
    "ts-node": "^10.0.0",
    "tslint": "^5.20.1",
    "tslint-config-security": "^1.16.0",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^3.9.9",
    "typescript-transform-paths": "^2.2.4"
  },
  "_moduleAliases": {
    "@src": "build/src"
  }
}
